<div class="row">
  <div class="col-xs-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="center-block" style="text-align: center;">
            <%= avatar_for(@user) %>
        </div>

        <div class="center-block" style="text-align: center;">
            <%= @user.username %><br>
            <%= current_user_do link_to 'Edit', edit_user_path(@user)  %>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <% if current_user.id == params[:id].to_i %>
      <p class="text-center">Explore</p>
        <ul>
          <% for user in @users %>
              <li><%= link_to user.username, user_path(user.id) %></li>
              <%= link_to "+", user_path(friend_id: user.id) %>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="panel panel-default">
      <% if current_user.id == params[:id].to_i %>
          <p class="text-center">Friends</p>
          <ul>
            <% for friend in @friends %>
                <li><%= link_to friend.username, user_path(friend.id) %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

  </div>

  <div class="col-xs-7">
    <div class="panel panel-default">
      <%= render 'notices/notice' %>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default" style="text-align: center">
      <h4>Categories</h4>
      <%= render 'categories/categories' %>
      <%= current_user_do render 'categories/add_category' %><br>
    </div>

    <%= render 'tags/tags' %>

  </div>

</div>