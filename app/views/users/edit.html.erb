<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit</h1>
    <%= form_for(@user, html: { multipart: true } ) do |f| %>

      <div class="form-group">
        <%= f.label :username %><br>
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>

      <%= f.submit "Edit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>