<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Notice</h1>

    <%= form_for @notice do |f| %>
      <% if @notice.errors.any? %>
        <div class="error">
          <h2>
            <%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:
          </h2>
          <ul>
            <% @notice.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :color %><br>
        <%= f.select :color, Notice::COLOR_NOTICE, prompt: "Select a color" %>
      </div>

      <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, cols: 40, rows: 8, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :all_tags %><br>
        <%= f.text_field :all_tags, class: "form-control" %>
      </div>
      <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>